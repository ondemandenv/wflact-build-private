{
  "name": "odmd-build",
  "description": "odmd-build",
  "version": "0.0.1",
  "author": "ONDEMANDENV.dev",
  "private": true,
  "homepage": "https://github.com/ondemandenv/build",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ondemandenv/build.git"
  },
  "bugs": {
    "url": "https://github.com/ondemandenv/build/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "package": "ncc build src/index.ts && terser dist/index.js -c -m -o dist/main.js",
    "package:watch": "npm run package -- --watch",
    "test": "jest",
    "all": "npm run format:write && npm run package",
    "debug": "tsc --build --clean && tsc --build && ts-node src/debug.ts"
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@vercel/ncc": "^0.38.1",
    "@aws-sdk/client-sts": "^3.569.0",
    "@aws-sdk/client-ssm": "^3.569.0",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "ts-node": "^10.9.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "terser": "^5.31.0"
  }
}
